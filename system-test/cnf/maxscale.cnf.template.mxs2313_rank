[maxscale]
threads=###threads###
log_info=1

[server1]
type=server
address=###node_server_IP_1###
port=###node_server_port_1###
protocol=MySQLBackend

[server2]
type=server
address=###node_server_IP_2###
port=###node_server_port_2###
protocol=MySQLBackend

[server3]
type=server
address=###node_server_IP_3###
port=###node_server_port_3###
protocol=MySQLBackend

[server4]
type=server
address=###node_server_IP_4###
port=###node_server_port_4###
protocol=MySQLBackend

#
# The server states are set in the test via `maxctrl set server`
#

[Hint]
type=filter
module=hintfilter

[RW-Split-Router]
type=service
router=readwritesplit
servers=server1,server2,server3,server4
user=maxskysql
password=skysql
master_failure_mode=fail_on_write
master_reconnection=true
filters=Hint

[Read-Connection-Router]
type=service
router=readconnroute
router_options=running
servers=server1,server2,server3,server4
user=maxskysql
password=skysql

[RW-Split-Listener]
type=listener
service=RW-Split-Router
protocol=MySQLClient
port=4006

[Read-Connection-Listener]
type=listener
service=Read-Connection-Router
protocol=MySQLClient
port=4008

#
# For service-to-service routing test
#

[service1]
type=service
router=readwritesplit
servers=server1,server2
user=maxskysql
password=skysql
rank=primary

[service2]
type=service
router=readwritesplit
servers=server1,server3
user=maxskysql
password=skysql
rank=secondary

[service3]
type=service
router=readwritesplit
servers=server1,server4
user=maxskysql
password=skysql
rank=secondary


[combined]
type=service
router=readwritesplit
targets=service1,service2,service3
user=maxskysql
password=skysql

[combined-listener]
type=listener
service=combined
protocol=MySQLClient
port=4009
